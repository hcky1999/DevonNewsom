<h1>Check out these posts!</h1>
<a href="/new">Add a Post!</a>
<hr>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Post Id</th>
            <th>User</th>
            <th>Topic</th>
            <th>Content</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var post in ViewBag.Posts)
    {
        <tr>
            <td>@post["PostId"]</td>
            <td>@post["Username"]</td>
            <td>@post["Topic"]</td>
            <td>@post["Content"]</td>
            <td>@post["CreatedAt"]</td>
        </tr>
    }
    </tbody>
</table>